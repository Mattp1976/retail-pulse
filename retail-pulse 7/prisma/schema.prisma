generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Source {
  id        String    @id @default(cuid())
  name      String
  url       String    @unique
  weight    Int
  worldview String
  createdAt DateTime  @default(now())
  articles  Article[]
}

model Article {
  id          String   @id @default(cuid())
  sourceId    String
  source      Source   @relation(fields: [sourceId], references: [id])
  title       String
  url         String   @unique
  publishedAt DateTime
  snippet     String?
  rawText     String?
  enrichment  Json?
  enrichedAt  DateTime?
  createdAt   DateTime @default(now())
}
